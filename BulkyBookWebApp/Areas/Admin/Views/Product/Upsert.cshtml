@using BukbyBook.Models
@model Product
@{
    ViewData["Title"] = "Upsert";
}

<div class="mt-3 p-3 border">

    <form method="post">
        <div class="row">
            <h1>Upsert Product</h1>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating pb-3 col-4">
            <input asp-for="Title" class="form-control" id="floatingTitle" placeholder="name@example.com">
            <label asp-for="Title" for="floatingTitle"></label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <textarea asp-for="Description" rows="3" class="form-control" id="floatingName"></textarea>
            <label asp-for="Description" for="floatingName"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <input asp-for="ISBN" class="form-control" id="floatingName" placeholder="name@example.com">
            <label asp-for="ISBN" for="floatingName"></label>
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <input asp-for="Author" class="form-control" id="floatingName" placeholder="name@example.com">
            <label asp-for="Author" for="floatingName"></label>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <input asp-for="ListPrice" class="form-control" id="floatingName" placeholder="name@example.com">
            <label asp-for="ListPrice" for="floatingName"></label>
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <input asp-for="Price" class="form-control" id="floatingName" placeholder="name@example.com">
            <label asp-for="Price" for="floatingName"></label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <input asp-for="Price50" class="form-control" id="floatingName" placeholder="name@example.com">
            <label asp-for="Price50" for="floatingName"></label>
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <input asp-for="Price100" class="form-control" id="floatingName" placeholder="name@example.com">
            <label asp-for="Price100" for="floatingName"></label>
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.categoryList" id="floatingName">
                <option disabled selected>Select</option>
            </select>
            <label for="floatingName" asp-for="CategoryId"></label>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-floating pb-3 col-4">
            <select class="form-select" asp-for="CoverId" asp-items="@(ViewData["coverList"] as IEnumerable<SelectListItem>)" id="floatingName">
                <option disabled selected>Select</option>
            </select>
            <label for="floatingName" asp-for="CoverId"></label>
            <span asp-validation-for="CoverId" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Update" class="btn btn-outline-warning px-5 " />
            <a asp-action="Index" asp-controller="Cover" class="btn btn-outline-info px-2">Go Back</a>
        </div>
    </form>
</div>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}