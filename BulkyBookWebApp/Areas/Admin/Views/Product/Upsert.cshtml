@using BukbyBook.Models.ViewModels
@model ProductVM
@{
    ViewData["Title"] = "Upsert";
}

<div class="mt-3 p-3 border">

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <h1>@(Model.Product.Id==0?"Create":"Update") Product</h1>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-floating pb-3 col-12">
                <input asp-for="Product.Title" class="form-control" id="floatingTitle" placeholder="name@example.com">
                <label asp-for="Product.Title" for="floatingTitle"></label>
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-12">
                <textarea asp-for="Product.Description" rows="3" class="form-control" id="floatingName" placeholder="name@example.com"></textarea>
                <label asp-for="Product.Description" for="floatingName"></label>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-6">
                <input asp-for="Product.ISBN" class="form-control" id="floatingName" placeholder="name@example.com">
                <label asp-for="Product.ISBN" for="floatingName"></label>
                <span asp-validation-for="Product.ISBN" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-6">
                <input asp-for="Product.Author" class="form-control" id="floatingName" placeholder="name@example.com">
                <label asp-for="Product.Author" for="floatingName"></label>
                <span asp-validation-for="Product.Author" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-3">
                <input asp-for="Product.ListPrice" class="form-control" id="floatingName" placeholder="name@example.com">
                <label asp-for="Product.ListPrice" for="floatingName"></label>
                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-3">
                <input asp-for="Product.Price" class="form-control" id="floatingName" placeholder="name@example.com">
                <label asp-for="Product.Price" for="floatingName"></label>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-3">
                <input asp-for="Product.Price50" class="form-control" id="floatingName" placeholder="name@example.com">
                <label asp-for="Product.Price50" for="floatingName"></label>
                <span asp-validation-for="Product.Price50" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-3">
                <input asp-for="Product.Price100" class="form-control" id="floatingName" placeholder="name@example.com">
                <label asp-for="Product.Price100" for="floatingName"></label>
                <span asp-validation-for="Product.Price100" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-12">
                <input type="file" class="form-" id="floatingName imgSrc" placeholder="name@example.com">
                <label for="floatingName" >ImgSrc</label>
                @*<span asp-validation-for="Product.Price100" class="text-danger"></span>*@
            </div>
            <div class="form-floating pb-3 col-6">
                <select class="form-select" asp-for="Product.CategoryId" asp-items="@Model.CategoryList" id="floatingName">
                    <option disabled selected>Select</option>
                </select>
                <label for="floatingName" asp-for="Product.CategoryId"></label>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-floating pb-3 col-6">
                <select class="form-select" asp-for="Product.CoverId" asp-items="@Model.CoverList" id="floatingName">
                    <option disabled selected>Select</option>
                </select>
                <label for="floatingName" asp-for="Product.CoverId"></label>
                <span asp-validation-for="Product.CoverId" class="text-danger"></span>
            </div>
        </div>
        <div>
            @if (Model.Product.Id == 0)
            {
                <input type="submit" value="Create" onclick="return validateImg" class="btn btn-outline-warning px-5 " />
            }else{
                <input type="submit" value="Update" class="btn btn-outline-warning px-5 " />
            }
            
            <a asp-action="Index" asp-controller="Product" asp-area="Admin" class="btn btn-outline-info px-2">Go Back</a>
        </div>
    </form>
</div>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    <script >
    function validateImg()
    {
        if(doc)
    }
    </script>
}