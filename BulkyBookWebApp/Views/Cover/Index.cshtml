@using BukbyBook.Models
@model IEnumerable<Cover>
@{
    ViewData["Title"] = "Index";
}
    

<div class="container pt-3">
    <div class="container pt-3 pb-3">
        <div class="row">
            <div class="col-6">
                <h1>Index Cover</h1>
            </div>
            <div class="col-6 text-end">

                <a asp-action="Create" asp-controller="Cover" class="btn btn-outline-dark">
                    <i class="bi bi-plus-circle"></i>&nbsp;Add New Cover
                </a>
            </div>


        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th width="25%" scope="col">Name</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <th class="align-middle">@item.Name</th>
                    <td class="align-middle">
                        <a asp-action="Edit" asp-route-Id ="@item.Id" asp-controller="Cover" class="btn-sm btn btn-outline-warning">
                            <i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                        <a asp-action="Delete" asp-route-Id ="@item.Id" asp-controller="Cover" class="btn-sm btn btn-outline-danger">
                            <i class="bi bi-trash2"></i>&nbsp;Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>